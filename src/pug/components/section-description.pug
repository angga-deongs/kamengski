//section-description
.section-description(class=data.modifier !== undefined ? 'section-description--' + data.modifier : '')
  .container
    .section-description__box
      .section-description__img
        ='\n'
        img.section-description__img__el(src="assets/img/dummy/"+data.img, alt=data.title)/
      .section-description__txt
        .section-description__txt__wrapper
          h2.text-title.text-title--left
            | !{data.title}
          p.section-description__desc
            | !{data.desc}
          ='\n'
          a.btn.btn--secondary(class=data.modifierBtn !== undefined ? 'btn--secondary-' + data.modifierBtn : '', href=data.action.to)
            | !{data.action.text}
            if data.modifierBtn !== undefined
              ='\n'
              i.fi-arrow-down
              ='\n'
