//product-item
.product__item
  .product__box
    ='\n'
    a.product__link(href=data.to) !{data.title}
    .product__img
      ='\n'
      img.product__img__el(src='assets/img/dummy/'+data.img, alt=data.title)/
    .product__hover
      h3.product__title !{data.title}
      h5.product__price Rp!{data.price}
